<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_detail_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/user_detail"
    android:layout_marginBottom="5dp"
    android:onClick="selectUser">
    <androidx.cardview.widget.CardView
        android:id="@+id/image_container"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/user_detail"
        android:layout_gravity="fill"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-8dp"
            android:onClick="selectImage"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_profile_100dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="24dp"

        android:text="User Name"
        android:textColor="@color/user_name_color"
        app:layout_constraintStart_toEndOf="@+id/image_container"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/user_detail"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:textSize="16dp"
        android:text="user_details"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_container"/>
    <ImageView
        android:id="@+id/select_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/user_name"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:src="@drawable/ic_check_circle_black_24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>